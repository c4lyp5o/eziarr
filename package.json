{
	"name": "eziarr",
	"type": "module",
	"private": true,
	"scripts": {
		"install:backend": "cd backend && bun install",
		"install:frontend": "cd frontend && bun install",
		"install": "bun install:backend && bun install:frontend",
		"dev:backend": "cd backend && bun --watch index.js",
		"dev:worker": "cd backend && bun --watch worker.js",
		"dev:frontend": "cd frontend && bun dev",
		"dev": "conc -n \"BACKEND,FRONTEND,WORKER\" -c \"cyan,yellow,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:worker\"",
		"build:client": "cd frontend && bun run build",
		"start": "pm2-runtime start ecosystem.config.js --env production",
		"stop": "pm2 stop all",
		"restart": "pm2 restart all",
		"logs": "pm2 monit"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"concurrently": "^9.2.1"
	}
}
